                  <Insets top="10.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </center>
   <left>
      <VBox prefHeight="375.0" prefWidth="165.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Obavijesti:" underline="true">
               <VBox.margin>
                  <Insets left="10.0" top="30.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ListView fx:id="listViewNotifications" prefHeight="200.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </ListView>
            <Button alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#showBooks" text="Dostupne knjige">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>
